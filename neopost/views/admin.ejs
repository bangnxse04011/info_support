<!DOCTYPE html>
<html>
<title>Admin Quản Lý</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta property="og:description" content="Mic on là một chương trình nhằm tìm kiếm, thu hút và thỏa mãn các tài năng trẻ trong lĩnh vực âm nhạc, FPTU - Melody Club và Gác Xép Band đồng tổ chức dưới sự tài trợ của nhãn hàng TH True Milk và PDP khối phổ thông FPT. ">
<meta property="og:title" content="MICONSHOW">
<meta property="og:image" content="https://miconshow.com/img/1.jpg">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<body>

  <div class="container w3-center w3-panel w3-green">
    <h2 class="w3-opacity"> Admin Quản lý</h2>
  </div>

  <div class="container w3-bar w3-green">

    <button class="w3-bar-item w3-button w3-large" onclick="location.href='/'">Trang chủ</button>
    <button class="w3-bar-item w3-button w3-large" onclick="openCity('upload')">Đăng Bài Chiến Dịch</button>
    <button class="w3-bar-item w3-button w3-large" onclick="openCity('update')">Đăng Bài Vilucky</button>
    <button class="w3-bar-item w3-button w3-large" onclick="openCity('chat_24h')">Chat Trực Tuyến</button>
    <button class="w3-bar-item w3-button w3-large w3-right">
      <a href="/admin/log_out">Đăng xuất</a>
    </button>
  </div>

  <!-- Add a frame chat 24h -->
  <div id="chat_24h" class="container w3-display-container city" style="display: none">
    <h1 style="text-shadow:1px 1px 0 #444">Chat </h1>
    <iframe src="https://vchat.vn/home/support_v2.php" style="width: 100%;height: 600px;"></iframe>
  </div>

  <div id="manager" class="container w3-display-container city">
    <div class="w3-panel">
      <form class="w3-container w3-card-4" action="/admin/add_account" method="POST">
        <h1 style="text-shadow:1px 1px 0 #444">Phân Quyền </h1>
        <label>Tài khoản</label>
        <input class="w3-input" type="text" name="uname" />
        </p>
        <p>
          <label>Mật Khẩu</label>
          <input class="w3-input" type="password" name="passwd" />
        </p>
        <span id="status" style="display: none">
        </span>
        <input class="w3-button w3-block w3-green" type="submit" value="Gửi">
        </p>
      </form>
    </div>
    <div class="w3-container ">
      <table class="w3-table-all w3-centered w3-card-4" id="list_users"></table>
    </div>
  </div>
  </div>

  <div id="upload" class="container w3-display-container city" style="display:none">
    <form class="w3-container w3-card-4 " action="/admin/add_event" method="POST" enctype="multipart/form-data">
      <h1 style="text-shadow:1px 1px 0 #444">Đăng bài Chiến Dịch</h1>
      <label>Tên</label>
      <input class="w3-input" type="text" name="name" />
      </p>
      <p>
        <label>Title</label>
        <input class="w3-input" type="text" name="title" />
      </p>
      <label>Miêu tả ngắn</label>
      <textarea class="w3-input" placeholder="Write something.." name="description_n" /></textarea>
      </br>
      <label>Miêu tả chi tiết</label>
      <textarea class="w3-input" placeholder="Write something.." name="description_d" /></textarea>
      </br>
      <label>Path images</label>
      <input type="file" class="w3-input" placeholder="Write something.." name="files" />
      </br>
      <input class="w3-button w3-green" type="submit" value="Đăng">
      </p>
    </form>
  </div>

  <div id="update" class="container w3-display-container city" style="display:none">
    <form class="w3-container w3-card-4 " action="/admin/add_event" method="POST" enctype="multipart/form-data">
      <h1 style="text-shadow:1px 1px 0 #444">Đăng bài Vilucky</h1>
      <label>Tên</label>
      <input class="w3-input" type="text" name="name" />
      </p>
      <p>
        <label>Title</label>
        <input class="w3-input" type="text" name="title" />
      </p>
      <label>Miêu tả ngắn</label>
      <textarea class="w3-input" placeholder="Write something.." name="description_n" /></textarea>
      </br>
      <label>Miêu tả chi tiết</label>
      <textarea class="w3-input" placeholder="Write something.." name="description_d" /></textarea>
      </br>
      <label>Path images</label>
      <input type="file" class="w3-input" placeholder="Write something.." name="files" />
      </br>
      <input class="w3-button w3-green" type="submit" value="Đăng">
      </p>
    </form>
  </div>
  <script>
    function openCity(cityName) {
      var i;
      var x = document.getElementsByClassName("city");
      for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";
      }
      document.getElementById(cityName).style.display = "block";
    }
  </script>
</body>

</html>